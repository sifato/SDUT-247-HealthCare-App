<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="10dp"
    android:background="@color/blue100"
    tools:context=".LoginActivity">

   <TextView
       android:id="@+id/signin"
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       android:layout_marginTop="50dp"
       android:fontFamily="@font/righteous"
       android:gravity="center"
       android:text="@string/signin"
       android:textSize="50dp"
       android:textStyle="italic" />

   <TextView
       android:id="@+id/create_your_account"
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       android:layout_below="@id/signin"
       android:layout_marginTop="5dp"
       android:fontFamily="@font/righteous"
       android:gravity="center"
       android:text="Login your account"
       android:textStyle="italic" />

   <EditText
       android:id="@+id/username1"
       android:layout_width="300dp"
       android:layout_height="60dp"
       android:layout_below="@id/create_your_account"
       android:layout_marginStart="50dp"
       android:layout_marginTop="50dp"
       android:layout_marginEnd="50dp"
       android:layout_marginBottom="10dp"
       android:background="#30ffffff"

       android:drawableLeft="@drawable/baseline_person_24"
       android:drawablePadding="8dp"
       android:fontFamily="@font/righteous"
       android:hint="@string/usrname" />

   <EditText
       android:id="@+id/password1"
       android:layout_width="300dp"
       android:layout_height="60dp"
       android:layout_below="@+id/username1"
       android:layout_marginStart="50dp"
       android:layout_marginTop="20dp"
       android:layout_marginEnd="50dp"
       android:layout_marginBottom="10dp"
       android:background="#30ffffff"

       android:drawableLeft="@drawable/baseline_lock_24"
       android:drawablePadding="8dp"
       android:fontFamily="@font/righteous"
       android:hint="@string/psword" />

   <Button
       android:id="@+id/btnsignin1"
       android:layout_width="350dp"
       android:layout_height="63dp"
       android:layout_below="@+id/password1"
       android:layout_marginStart="35dp"
       android:layout_marginTop="50dp"
       android:layout_marginEnd="40dp"
       android:backgroundTint="@color/blueA20"
       android:fontFamily="@font/righteous"
       android:text="Sign in" />

   <TextView
       android:id="@+id/dnthvacnt"
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       android:layout_below="@+id/btnsignin1"
       android:layout_marginTop="20dp"
       android:fontFamily="@font/righteous"
       android:gravity="center"
       android:text="Don't have an account?" />

   <TextView
       android:id="@+id/btnsignup1"
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       android:layout_below="@+id/dnthvacnt"
       android:fontFamily="@font/righteous"
       android:gravity="center"
       android:text="@string/signup"
       android:textStyle="bold" />


</RelativeLayout>